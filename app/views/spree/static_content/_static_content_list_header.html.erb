<% if page.foreign_link.present? %>
  <li class="navbar main-nav-bar-dropdown main-nav-bar-category"><%= link_to page.title, page.foreign_link, target: '_blank', rel: 'nofollow', class: 'px-2 pb-2 main-nav-bar-category-button main-nav-bar-item' %></li>
<% else %>
  <% page_uri = Rails.application.routes.named_routes[:spree].path.spec.to_s == '/' ? page.slug : Rails.application.routes.named_routes[:spree].path.spec.to_s + page.slug %>
  <li class="<%= 'current' if (request.fullpath.gsub('//','/') == page_uri) %> navbar main-nav-bar-dropdown main-nav-bar-category"><%= link_to page.title, page_uri, class: 'px-2 pb-2 main-nav-bar-category-button main-nav-bar-item' %></li>
<% end %>
